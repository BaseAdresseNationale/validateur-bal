{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "forceConsistentCasingInFileNames": false,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": ["**/__tests__", "dist"],
  "include": ["lib/**/*"]
}
